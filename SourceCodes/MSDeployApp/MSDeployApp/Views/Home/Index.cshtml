<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>Microsoft Deployment</title>

    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />

    <link rel="apple-touch-icon" sizes="76x76" href="~/assets/img/apple-icon.png" />
    <link rel="icon" type="image/png" href="~/assets/img/favicon.png" />

    <!--     Fonts and icons     -->
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" />

    <!-- CSS Files -->
    <link href="@Url.Content("~/assets/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/assets/css/material-bootstrap-wizard.css")" rel="stylesheet" type="text/css" />

    <!-- CSS Just for demo purpose, don't include it in your project -->
    <link href="@Url.Content("~/assets/css/demo.css")" rel="stylesheet" type="text/css" />

</head>

<body>
    <style>
        .image-container {
            background-image: url('../../assets/img/BG2.jpg');
            margin: 0;
            background-repeat: no-repeat;
            background-size: cover;
        }

        h5 {
            color: #F25022;
        }
    </style>
    <div class="image-container set-full-height">

        <!--   Big container   -->
        <div class="container">
            <div class="row">
                <div class="col-sm-8 col-sm-offset-1">
                    <!--      Wizard container        -->
                    <div class="wizard-container" style="width:895px;">
                        <div class="card wizard-card" data-color="red" id="wizard">
                            <div class="wizard-header">
                                <a href="https://www.microsoft.com">
                                    <img src="~/assets/img/new_logo2.jpg" style="width: 16%;float:left;margin-left:40px;margin-top:-13px;">
                                </a>
                                <h3 class="wizard-title" style="color:#00A4EF;text-align:left;">
                                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Sentiment Data Pipeline
                                </h3>
                            </div>
                            <div class="wizard-navigation">
                                <ul>
                                    <li><a href="#details" data-toggle="tab">Azure Source</a></li>
                                    <li><a href="#description" @*data-toggle="tab"*@>Summary</a></li>
                                </ul>
                            </div>

                            <div class="tab-content">
                                <div class="tab-pane" id="details">
                                    <div class="row">
                                        <form action=@Url.Action("SqlDBFn") method="post" name="sqldbinput">
                                            <div class="col-sm-12">
                                                <center>
                                                    <div class="input-group">
                                                        <h5><b>Make sure there is no Resource Group called "ARM-DeployRG"</b></h5>
                                                    </div>
                                                </center>
                                            </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-sm-6">
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    <i class="material-icons">
                                                        payment
                                                    </i>
                                                </span>
                                                <div class="form-group label-floating">
                                                    <label class="control-label">Azure Login ID</label>
                                                    <input type="text" name="azuid" id="azuid" class="form-control" required="">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    <i class="large material-icons">insert_chart</i>
                                                </span>
                                                <div class="form-group label-floating">
                                                    <label class="control-label">Your Power BI Service Account ID</label>
                                                    <input type="text" name="pbid" id="pbid" class="form-control" required="">
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    <i class="material-icons dp48">lock</i>
                                                </span>
                                                <div class="form-group label-floating">
                                                    <label class="control-label">Azure Login Password</label>
                                                    <input type="password" name="azpwd" id="azpwd" class="form-control" required="">
                                                </div>
                                            </div>

                                        </div>
                                        <div class="col-sm-6">
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    <i class="material-icons dp48">lock</i>
                                                </span>
                                                <div class="form-group label-floating">
                                                    <label class="control-label">Your Power BI Service Account Password</label>
                                                    <input type="password" name="pbpwd" id="pbpwd" class="form-control" required="">
                                                </div>
                                            </div>


                                        </div>
                                    </div>
                                    <div class="row">
            <div class="col-sm-6">
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="material-icons dp48">dns</i>
                    </span>
                    <div class="form-group label-floating">
                        <label class="control-label">SQL Server Name</label>
                        <input type="text" name="dbsrc" id="dbsrc" class="form-control" required="">
                    </div>
                </div>

            </div>
            <div class="col-sm-6" style="display: none;">
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="material-icons dp48">dns</i>
                    </span>
                    <div class="form-group label-floating">
                        <label class="control-label">SQL Server Name</label>
                        <input type="text" name="" class="form-control" required="">
                    </div>
                </div>

            </div>
        </div>

                                    <div class="row">
                                        <div class="col-sm-6">
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    <i class="material-icons">
                                                        payment
                                                    </i>
                                                </span>
                                                <div class="form-group label-floating">
                                                    <label class="control-label">Server Admin Login</label>
                                                    <input type="text" name="dbuid" id="dbuid" class="form-control" required="">
                                                </div>
                                            </div>

                                        </div>
                                        <div class="col-sm-6" style="display: none;">
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    <i class="material-icons">
                                                        payment
                                                    </i>
                                                </span>
                                                <div class="form-group label-floating">
                                                    <label class="control-label">Server Admin Login</label>
                                                    <input type="text" name="" class="form-control" required="">
                                                </div>
                                            </div>


                                        </div>
                                    </div>
                                    <div class="row">

                                        <div class="col-sm-6">
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    <i class="material-icons dp48">lock</i>
                                                </span>
                                                <div class="form-group label-floating">
                                                    <label class="control-label">Server Admin Login Password</label>
                                                    <input type="password" name="dbpwd" id="dbpwd" class="form-control" required="">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div>
                                        <button type='submit' id="details_tab" name='next' style="float:right;display:block;background:#00A4EF;border-radius:18px;color:white;font-size:20px;width:14%;height:7%;border-style:unset;">Run</button>
                                    </div>
                                </div>
                                </form>

                                <button id="details_tab1" name='next' style="float:right;display:none;background:#00A4EF;border-radius:18px;color:white;font-size:20px;width:14%;height:7%;border-style:unset;" onclick="window.location.href= '/Home/ARMFn';">Next</button>
                            </div>
                        </div>

                        <div class="tab-pane" id="description" style="display:none;"></div>

                    </div>
                    <div class="wizard-footer">
                        <div class="pull-left">
                            <div class="footer-checkbox">
                            </div>
                        </div>
                        <div class="clearfix"></div>
                    </div>

                </div>
            </div> <!-- wizard container -->
        </div>
    </div> <!-- row -->
    </div> <!--  big container -->
    <!--  -->
    </div>

</body>
<!--   Core JS Files   -->
<script src="~/assets/js/jquery-2.2.4.min.js" type="text/javascript"></script>
<script src="~/assets/js/bootstrap.min.js" type="text/javascript"></script>
<script src="~/assets/js/jquery.bootstrap.js" type="text/javascript"></script>

<!--  Plugin for the Wizard -->
<script src="~/assets/js/material-bootstrap-wizard.js"></script>

<!--  More information about jquery.validate here: http://jqueryvalidation.org/	 -->
<script src="~/assets/js/jquery.validate.min.js"></script>

<script> 

    $(document).ready(function () {
        $('#details_tab').attr('disabled', true);
        $('#azuid,#pbid,#azpwd,#pbpwd,#dbsrc,#dbuid,#dbpwd').on('keyup', function ()
        {
            var azuid = $("#azuid").val();
            var pbid = $("#pbid").val();
            var azpwd = $("#azpwd").val();
            var pbpwd = $("#pbpwd").val();
            var dbsrc = $("#dbsrc").val();
            var dbuid = $("#dbuid").val();
            var dbpwd = $("#dbpwd").val();

            if (azuid != "" && pbid != "" && azpwd != "" && pbpwd != "" && dbsrc != "" && dbuid != "" && dbpwd != "")
            {
                $('#details_tab').attr('disabled', false);
            } else {
                $('#details_tab').attr('disabled', true);
            }
        });
    });

    $('#details_tab').on("click", function ()
    {
        
            document.getElementById("details_tab").style.display = "none";
            document.getElementById("details_tab1").style.display = "block";
        
    }
    ); 

    
</script>

</html>





